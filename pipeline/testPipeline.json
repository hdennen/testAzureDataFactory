{
	"name": "testPipeline",
	"properties": {
		"activities": [
			{
				"name": "flatMapCopy",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Check files exist",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true
						}
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"quoteAllText": true,
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['id']"
								},
								"sink": {
									"path": "components_id"
								}
							},
							{
								"source": {
									"path": "['name']"
								},
								"sink": {
									"path": "components_name"
								}
							},
							{
								"source": {
									"path": "['isDeprecated']"
								},
								"sink": {
									"path": "components_isDeprecated"
								}
							},
							{
								"source": {
									"path": "['type']"
								},
								"sink": {
									"path": "components_type"
								}
							},
							{
								"source": {
									"path": "['dependencies']"
								},
								"sink": {
									"path": "dependencies"
								}
							},
							{
								"source": {
									"path": "$['product']['id']"
								},
								"sink": {
									"path": "product_id"
								}
							},
							{
								"source": {
									"path": "$['product']['Name']"
								},
								"sink": {
									"path": "product_name"
								}
							},
							{
								"source": {
									"path": "$['authoritative-branch']"
								},
								"sink": {
									"path": "authoritative-branch"
								}
							}
						],
						"collectionReference": "$['components']"
					}
				},
				"inputs": [
					{
						"referenceName": "atomjson",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "atomsFlattened",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Check files exist",
				"type": "Validation",
				"dependsOn": [],
				"userProperties": [
					{
						"name": "TEst",
						"value": "myValue"
					}
				],
				"typeProperties": {
					"dataset": {
						"referenceName": "atomsFlattened",
						"type": "DatasetReference"
					},
					"timeout": "7.00:00:00",
					"sleep": 10,
					"childItems": true
				}
			}
		],
		"annotations": []
	}
}